<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Ui.Activity.EditProfile">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/added"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/cardview_image_back"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/boutrosmbcinkmmedium"
            android:textColor="@color/black"
            android:text="@string/actionbar_editprofile"
            android:gravity="center"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_image_back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="@id/added"
            app:layout_constraintTop_toTopOf="parent"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="@dimen/_30sdp"
            android:layoutDirection="rtl"
            tools:ignore="MissingConstraints">
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_back"
            />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/white"
            >
            <EditText
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_50sdp"
                android:id="@+id/name"
                android:inputType="text"
                app:fontFamily="@font/boutrosmbcinkmmedium"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="@string/name_hint_editprofile"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:paddingLeft="@dimen/_16sdp"
                android:paddingRight="@dimen/_10sdp"
                android:background="@drawable/custom_edittext_name"
                android:focusable="false"
                android:textDirection="ltr"
                android:layoutDirection="ltr"
                />
                <EditText
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/phone_number"
                    android:inputType="number"
                    app:fontFamily="@font/boutrosmbcinkmmedium"
                    android:hint="@string/phone_hint"
                    android:maxLength="10"
                    android:textSize="@dimen/_14ssp"
                    android:paddingLeft="@dimen/_16sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:background="@drawable/custom_edittext"
                    android:textDirection="ltr"
                    android:layoutDirection="ltr"
                    />

            <EditText
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_50sdp"
                android:id="@+id/cafeteria"
                android:inputType="text"
                android:layout_marginTop="@dimen/_10ssp"
                app:fontFamily="@font/boutrosmbcinkmmedium"
                android:drawableRight="@drawable/custom_cafeteria_icon"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="@string/cafeteria_hint_editprofile"
                android:textSize="@dimen/_14ssp"
                android:paddingLeft="@dimen/_16sdp"
                android:paddingRight="@dimen/_10sdp"
                android:background="@drawable/custom_edittext"
                android:textDirection="rtl"
                android:layoutDirection="rtl"
                />

            <EditText
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_50sdp"
                android:id="@+id/location"
                android:inputType="text"
                android:layout_marginTop="@dimen/_10ssp"
                app:fontFamily="@font/boutrosmbcinkmmedium"
                android:drawableRight="@drawable/custom_location_icon"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="@string/location_hint_editprofile"
                android:textSize="@dimen/_14ssp"
                android:paddingLeft="@dimen/_16sdp"
                android:paddingRight="@dimen/_10sdp"
                android:background="@drawable/custom_edittext"
                android:textDirection="rtl"
                android:layoutDirection="rtl"
                />
        <FrameLayout
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            >
            <Button
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_50sdp"
                android:text="@string/edit"
                app:fontFamily="@font/boutrosmbcinkmmedium"
                android:id="@+id/edit_btn2"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                android:layout_gravity="center"
                android:focusable="false"
                android:enabled="false"
                android:background="@drawable/custom_btn_transations"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="btn_edit"
                tools:ignore="OnClick" />
            <Button
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_50sdp"
                android:text="@string/edit"
                app:fontFamily="@font/boutrosmbcinkmmedium"
                android:id="@+id/edit_btn"
                android:textColor="@color/white"
                android:visibility="invisible"
                android:textSize="@dimen/_13ssp"
                android:layout_gravity="center"
                android:background="@drawable/custom_btn"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="btn_edit"
                tools:ignore="OnClick" />
        </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_10sdp"
                android:id="@+id/editpassword"
                android:text="@string/edit_password_tv"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_13ssp"
                android:foreground="?android:attr/selectableItemBackground"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>