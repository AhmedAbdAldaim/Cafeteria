<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Ui.Activity.AddItem">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/added"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/boutrosmbcinkmmedium"
        android:textColor="@color/black"
        android:text="@string/add_item"
        android:gravity="center"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/white"
            >
                <EditText
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:id="@+id/item_name"
                    android:inputType="text"
                    app:fontFamily="@font/boutrosmbcinkmmedium"
                    android:hint="@string/item_name"
                    android:textSize="@dimen/_14ssp"
                    android:paddingLeft="@dimen/_16sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:background="@drawable/custom_edittext_additems"
                    />

                    <EditText
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="10sp"
                        android:textDirection="rtl"
                        android:id="@+id/item_price"
                        android:inputType="number"
                        app:fontFamily="@font/boutrosmbcinkmmedium"
                        android:hint="@string/item_price"
                        android:textSize="@dimen/_14ssp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:background="@drawable/custom_edittext_additems"
                        />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_height="wrap_content">
            <Spinner
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/categories_type"
                android:background="@drawable/custom_spin"
                />
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/prog"
                android:visibility="visible"
                android:layout_gravity="center"/>

        </FrameLayout>
            <FrameLayout
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                >
            <Button
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_50sdp"
                android:text="@string/added"
                app:fontFamily="@font/boutrosmbcinkmmedium"
                android:id="@+id/add_btn2"
                android:enabled="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                android:layout_gravity="center"
                android:background="@drawable/custom_btn_transations"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="edit_btn"
                tools:ignore="OnClick" />
            <Button
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_50sdp"
                android:text="@string/added"
                app:fontFamily="@font/boutrosmbcinkmmedium"
                android:id="@+id/add_btn"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                android:visibility="invisible"
                android:layout_gravity="center"
                android:background="@drawable/custom_btn"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="add_btn"
                tools:ignore="OnClick" />
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/boutrosmbcinkmmedium"
                android:textColor="@color/red"
                android:text="@string/added_note"
                android:gravity="center"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>