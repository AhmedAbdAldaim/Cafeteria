<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/categories"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/boutrosmbcinkmmedium"
        android:textColor="@color/black"
        android:text="@string/categorie"
        android:gravity="center"
        />
    <Button
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_30sdp"
        android:text="@string/call"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categories"
        app:fontFamily="@font/boutrosmbcinkmmedium"
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/call"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="@dimen/_13ssp"
        android:layout_gravity="center"
        android:background="@drawable/custom_btn_call"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="add_btn"
        tools:ignore="OnClick" />

    <EditText
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_40sdp"
        android:id="@+id/search"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:layout_marginTop="@dimen/_10sdp"
        android:drawableRight="@drawable/ic_saerch"
        android:drawablePadding="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categories"
        android:inputType="text"
        app:fontFamily="@font/boutrosmbcinkmmedium"
        android:hint="@string/search"
        android:textSize="@dimen/_14ssp"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingRight="@dimen/_10sdp"
        android:background="@drawable/custom_edittext_additems"
        />


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipe"
        android:layout_marginTop="@dimen/_90sdp"
        android:paddingRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="NotSibling">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.facebook.shimmer.ShimmerFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/categories"
                android:layout_marginTop="@dimen/_12sdp"
                android:id="@+id/shimmemr">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <include layout="@layout/shimmer"/>

                </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="top"
                android:layoutDirection="rtl"
                android:background="@color/white"
                android:visibility="invisible"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="@dimen/_12sdp"
           />
        </FrameLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/liner_empty_date"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            android:id="@+id/img_no_data"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/undraw_no_data"
          />
        <TextView
            android:id="@+id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/empty_categorie"
            android:textColor="@color/black1"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/img_bad_connection"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/undraw_connection"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:visibility="gone"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnconnection"
            android:layout_gravity="center"
            android:text="@string/try_agin"
            android:visibility="gone"
            android:gravity="center"/>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_40sdp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingLeft="@dimen/_2sdp"
        android:paddingRight="@dimen/_2sdp"
        android:visibility="invisible"
        android:layoutDirection="rtl"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.950"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_add"/>
</androidx.constraintlayout.widget.ConstraintLayout>